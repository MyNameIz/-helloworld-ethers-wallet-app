<ul class="wallet list-unstyled">
    <li class="row">
        <div class="col-6 d-flex justify-content-start">
            <button id="refresh">Refresh Info</button>
        </div>

        <div class="col-6 d-flex justify-content-end">
            <a href="/">Enter another wallet</a>
        </div>
    </li>

    <li class="row">
        <div class="col-4"></div>
        <div class="col-4 d-flex flex-row">
            <p class="text-right mr-2 pt-3">Current Balance:</p>
            <h1 class="px-2 pt-1 text-left font-weight-bold" id="balance"></h1>
        </div>
        <div class="col-4"></div>
    </li>

    <li class="row mt-5">
        <div class="col-12 container">
            <ul class="row list-unstyled">
                <li class="col">
                    <ul class="list-unstyled">
                        <li class="row d-flex justify-content-center">
                            <h4 class="text-center font-weight-bold">Send Ether</h2>
                        </li>

                        <li class="row">
                            <ul class="col-12 list-unstyled">
